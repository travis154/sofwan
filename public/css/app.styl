.carousel-caption
	background rgba(0,0,0,.5)
	a
		text-decoration none
	h3
		color white

#quickcontact
	>span
		trans(padding .21s ease-in, background .21s ease-in)
		background transparent
		display inline-block
		margin-right 10px
		>span
			&:first-child
				color #00e0ff
#quickcontact.active
	>span
		background #00e0ff
		padding 20px
		font-weight 400	
		>span
			&:first-child
				color white
.white
	color #f0f0f0
.carousel-mover
	color black
	cursor pointer
	margin-bottom: 7px;
	border: solid 1px #c0c0c0;
	height 140px
	padding-left: 10px;
	-webkit-filter: grayscale(1);
	-moz-filter: grayscale(1);
	filter grayscale(1);
	h4
		color white
		text-shadow 1px 1px rgba(1,1,1,.3)
	.col-md-4
		padding-left 0px
	&:hover
		h4
			color main-color

.carousel-mover.active
	-webkit-filter: grayscale(0) !important;
	-moz-filter: grayscale(0) !important;
	filter grayscale(0) !important;
	background #f0f0f0
	color #666
	h4
		color white
		font-weight bold
		
	&:hover
		h4
			color white

.affix-item
	>img
		margin-bottom 10px
.members
	img
		margin-right 5px
		margin-bottom 5px
