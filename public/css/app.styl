main-color=#00989E

a
	color main-color
trans(arg)
	transition arg
	-webkit-transition arg
	-moz-transition arg
	-o-transition arg
*
	//font-family "Open Sans" !important

body
	overflow-x: hidden;
.mark
	background #f0f0f0
	border solid 1px #d0d0d0
.align-right
	text-align right
		
.flexible-container
	position: relative
	padding-bottom: 44.25%
	padding-top: 30px
	height: 0
	overflow: hidden
	iframe
	object
	embed
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
nav
	margin-top: 3em;
.navbar-default
	.navbar-nav
		>li
			&:hover
				background main-color
				>a
					color white
					
			>a
				color main-color
				font-weight: 600;
.navbar-default
	background-color transparent
	border-color transparent		
.nav-pills
	>li.active
		>a
			background-color main-color
